---
const { title } = Astro.props;
import { Icon } from 'astro-icon/components'
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<header class="h-16 flex items-center">
			<div class="container flex flex-row items-center justify-between max-w-[1200px] mx-auto" >
				<img src="duolingo logo.svg" alt="">
				<a class="relative group flex flex-row items-center hover:text-gray-300 text-gray-400 font-extrabold uppercase" href="#">
					Idioma de la pàgina
					<Icon name="mdi:chevron-down" />

					<div class="absolute top-6 hidden group-hover:block">
						Opciones de menù 
						<Icon name="flagpack:au" size={64} />
					</div>
				</a>
			</div>
		</header>
		<div class=" flex mt-36 justify-center mx-auto">
			<div class="max-w-lg">
				<img src="/duolingo-promo.svg" alt="">
			</div>
			<div class=" flex flex-col items-center justify-center w-1/4">
				<h1 class="text-3xl text-center font-bold text-slate-700">
					¡La forma divertida, efectiva y gratis de aprender un idioma!
				</h1>
				<div class="mt-10 hover:cursor-pointer hover:bg-[#7edd36] rounded-xl border-b-4 border-[#559524] text-white font-bold flex justify-center items-center w-80 h-10 bg-[#58CC02]">
					EMPIEZA AHORA
				</div>
				<div class="mt-4 hover:cursor-pointer hover:bg-gray-300/70 rounded-xl border-2 border-b-4 border-gray-200 text-[#1CB0F6] font-bold flex justify-center items-center w-80 h-10 bg-white">
					YA TENGO UNA CUENTA
				</div>
			</div>
		</div>

		
		
		<slot />

	</body>
</html>

